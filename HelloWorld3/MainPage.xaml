                Content="Click Me" 
                HorizontalAlignment="Left" 
                Margin="84,96,0,0" 
                VerticalAlignment="Top" 
                Click="ClickMeButton_Click"
                Width="200"
                Height="100"
                />
        
        <TextBlock x:Name="ResultTextBlock" 
                   HorizontalAlignment="Left" 
                   Margin="123,209,0,0" 
                   TextWrapping="Wrap" 
                   Text="" 
                   VerticalAlignment="Top"/>
        <Button x:Name="button" 
                Content="hELLO WORLD"
                HorizontalAlignment="Left" 
                Margin="284,319,0,0" 
                VerticalAlignment="Top"/>
        <Button x:Name="hello world" 
                Content="Button" 
                HorizontalAlignment="Left" 
                Margin="223,423,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
